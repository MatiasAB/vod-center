<div class="container backg" id="navi">
	<h2 id="navh2"> Navigation Bar </h2>
	<ul>
		<li><a class = "link text-secondary" href="/title">Back to home page</a></li>
		<li><a class = "link text-secondary" href="/user"> Back to User's Page </a></li>
		<li><a class = "link text-secondary" href="/user/sent"> View Sent Messages </a></li>
	</ul>
</div>

<div class="container backg usr">
	<div style="padding-top:30px" class = "row">
		<div class = "col-4">
			<h3>{{tUser.username}}'s Inbox</h3>
		</div>
	</div>

	<div class="row" style="border-top: 2px solid black; padding-top: 2%;">
		<div class="col-12">
			<h2> Messages </h2> <br>
			<a href="/user/inbox/newmsg"><button type="submit" value="newMsg">New Message</button></a>
			<a href='/user/inbox/sortBy/from'><button value="gbSend">Group By Sender</button></a>
			<a href='/user/inbox/sortBy/subj'><button value="gbSubj">Group By Subject</button></a> <br>
			<h4 style="color:blue;"> {{mConf}} </h4>
		</div>
	</div>
	
	<div class = "row" style="overflow-x: auto; padding-top: 2%;">
		<table class="col-12">
			<tr>
				<th class="text-info"> Subject </th>
				<th class="text-info"> From </th>
				<th class="text-info"> Read </th>
			</tr>

			
			{{#each tUser.mail.inbox as |msg i|}}
				<tr id="{{i}}">
					<td> <a href="/user/inbox/viewMsg/{{msg._id}}"> {{msg.subject}}</a> </td>
					<td> {{msg.from}}</a></td>
					<td> {{msg.read}} </td>
					<td class="rmv"><a class = "link text-info" href="/user/inbox/reply/{{msg._id}}">Reply</a></td>
					<td class="rmv"><a class = "link text-info" href="/user/inbox/markR/{{msg._id}}">Mark as Read</a></td>
					<td class="rmv"><a onclick="rmvFunction(this, `{{msg.subject}}`)" class = "link text-danger" id="/user/inbox/rmvMsg/{{msg._id}}">Delete Message</a></td>
				</tr>
			{{/each}}

		</table>
	</div>

</div>