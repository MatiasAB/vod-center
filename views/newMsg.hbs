<div class="container">
	<div class="row">
		<div id="navi">
			<h2 id="navh2"> Navigation Bar </h2>
			<ul>
				<li><a class = "link text-secondary" href="/title">Back to home page</a></li>
				<li><a class = "link text-secondary" href="/user"> Back to User's Page </a></li>
				<li><a class = "link text-secondary" href="/user/inbox"> Back to User's Inbox </a></li>
			</ul>
		</div>
	</div>
</div>


<div class="container backg usr" style="margin-top:2%; display: inline-block; margin-left: 10.9%">
	

	<div class="row">
		<div class="w-60 mx-auto">
			<h2 style="padding-top:30px">New Message</h2>
		</div>
	</div>

	<div class="row">
		<div class="w-60 mx-auto">
			<h4 style="color:red"> {{wMsg}} </h4>
		</div>
	</div>

	<div class = "row">
			<div class = "w-60 mx-auto nMsg2">
				To:
			</div>
	</div>

	<div class = "row nMsg">
			<div class = "w-60 mx-auto">
				<input type="text" id="msgDest">
			</div>
	</div>
	
	<div class = "row">
			<div class = "w-60 mx-auto nMsg2">
				Subject: 
			</div>
	</div>

	<div class = "row nMsg">
			<div class = "w-60 mx-auto">
				<input type="text" id="msgSubj">
			</div>
	</div>

	<div class = "row">
			<div class = "w-60 mx-auto nMsg2">
				Message:  
			</div>
	</div>

	<div class = "row nMsg">
			<div class = "w-60 mx-auto">
				<textarea id="msgText" rows="7" cols="50"></textarea>
			</div>
	</div>

	<div class = "row nMsg" style="padding-top: 10px;">
			<div class = "w-60 mx-auto">
				<button type="button" onclick="show('attchG', this, 'Attachments Help')">Attachments Help</button><br>
			</div>

			<div class = "w-60 mx-auto" id="attchG" style="display:none;">
					Instructions for Attachments
					<ol>
						<li> Click the Add Attachments Button below. </li>
						<li> Click the checkboxes next to the lists and/or items you want to send. If you attach a list but you also click the box of a single item in that list, a copy of that item will also be attached separately.</li>
						<li> Done! If the other fields are filled out, hit the Send Message button at the bottom of the page! </li>
					</ol>
			</div>
	</div>

	<div class = "row nMsg">
			<div class = "w-60 mx-auto nMsg2">
				<button type="button" onclick="show('showAt', this, 'Add Attachments')">Add Attachments</button>
			</div>
	</div>

	<div id="showAt" style="display: none;">
		{{#each atList as |list|}}
		<div class = "row nMsg" style="padding-top: 10px;">
			<div class = "w-60 mx-auto">
				<h4><input type="checkbox" id="{{list.name}}" name="{{list.name}}{{j}}" value="{{list.name}}">  {{list.name}}</h4> 
			</div>
		</div>
		<div class = "row" style="overflow-x: auto; padding-bottom: 2%; border-bottom: 2px dashed black;">
			<table class="col-12">
				<tr>
					<th class="rmv"></th>
					<th class="text-info"> Entry Name </th>
					<th class="text-info"> Entry URL </th>
					<th class="text-info"> Game </th>
					<th class="text-info"> Players </th>
					<th class="text-info"> Characters </th>
				</tr>

				
				{{#each list.items as |vod i|}}
					<tr id="{{i}}">
						<td class="rmv">
							<input type="checkbox" id="{{list.name}}%{{i}}" value="{{list.name}}@#{{i}}">
						</td>
						<td> {{vod.name}} </td>
						<td> <a href={{vod.url}}>{{vod.url}}</a></td>
						<td> {{vod.game}} </td>
						<td>
							{{#each vod.players as |play|}}{{play}}, {{/each}}
						</td>
						<td>
							{{#each vod.chars as |char|}}{{char}}, {{/each}}
						</td>
					</tr>
				{{/each}}

			</table>
		</div>
		{{/each}}</form>
	</div>

	<div class = "row nMsg" style="padding-top: 15px;">
		<div class = "w-60 mx-auto">
			<button name="sendBtn" onclick="sendMsg(this)">Send Message</button>
		</div>
	</div>
	
</div>