</div>


<div class="container">

	<div class="row">

		<div class="w-60 mx-auto">

			<div class="backg w-60 mx-auto" style="display: inline-block; padding-left: 55px; padding-right: 55px;">
				<div class = "row">
					<div class = "w-60 mx-auto">
						<h2 style="text-decoration: underline;">Lists:</h2><br>
					</div>
				</div>

					
				<form method="GET" action="/user" id="form2" style="padding-bottom: 5px;">
					<h4 style="display: flex;">Filter by name:</h4><input type="text" name="listQuery">
					<button type="submit" form="form2" value="Filter">Filter</button>
				</form>


				<ul style="padding-left: 15px; display: inline;">
				{{#each theUser.lists as |list|}}
				<div class = "row listR">
					<div class = "w-60 mx-auto">
						<li>
							<h3 class = "info"><a class="link text-secondary" href="/user/lists/{{list._id}}">{{list.name}}</a></h3>
							<div class="dropdown">
							<button class="dropbtn">Choose an Action</button>
							<div class="dropdown-content">
								<a class="link text-info" href="/user/edit/{{list._id}}">Edit Name</a>
								<a class="link text-info" onclick="mergeCheck(this, '{{list.items.length}}')" id="/user/merge/{{list._id}}">Merge</a>
								<a class="link text-info" onclick="splitCheck(this, '{{list.items.length}}')" id="/user/split/{{list._id}}">Split</a>
								<a class="link text-info" onclick="share('{{list.name}}')">Share</a>
								<a class="link text-danger" onclick="rmvFunction(this, '{{list.name}}')" id="/user/remove/{{list._id}}">Remove</a>
							</div>
						</div>
						</li>
						
					</div>
				</div>
				<div class="row">
					<div class="w-60 mx-auto">
						
					</div>
				</div>
				{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>

