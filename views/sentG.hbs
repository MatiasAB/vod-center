<div class="container">
	<div class="row">
		<div id="navi">
			<h2 id="navh2"> Navigation Bar </h2>
			<ul>
				<li><a class = "link text-secondary" href="/title">Back to home page</a></li>
				<li><a class = "link text-secondary" href="/user"> Back to User's Page </a></li>
				<li><a class = "link text-secondary" href="/user/inbox"> View Inbox </a></li> 
			</ul>
		</div>
	</div>
</div>

<div class="container">
	<div style="padding-top:10px;" class = "row">
		<div class = "w-60 titleR mx-auto">
			<h2 class="backg titleT">{{un}}</h2>
		</div>
	</div>
</div>

<div class="container backg usr">

	<div class="row" style="padding-top: 2%;">
		<div class="w-60 titleR mx-auto">
			<h2 class="titleT" style="font-weight: none;"> Messages </h2> <br>
		</div>
	</div>

	<div class="row" style="padding-top: 2%;">
		<div class="w-60 mx-auto">
			<a href='/user/sent'><button class="rBtn" value="gbSend">Remove Current Grouping</button></a>
			<a href='/user/sent/sortBy/from'><button class="rBtn" value="gbSend">Group By Receiver</button></a>
			<a href='/user/sent/sortBy/subj'><button class="rBtn" value="gbSubj">Group By Subject</button></a> <br>
		</div>
	</div>
	
	{{#each tbox.items as |group|}}
	<div class = "row" style="padding-top: 2%; padding-left: 15%;">
		<div class="col-12"> <h3> {{group.name}} </h3> </div>
		<table style="overflow-x: auto;" class="col-12">
			<tr>
				<th class="text-info"> Subject </th>
				<th class="text-info"> To </th>
			</tr>

			
			{{#each group.items as |msg i|}}
				<tr id="{{i}}">
					<td> <a href="/user/sent/viewMsg/{{msg._id}}"> {{msg.subject}}</a> </td>
					<td> {{msg.to}}</a></td>
					<td class="rmv"><a onclick="rmvFunction(this, `{{msg.subject}}`)" class = "link text-danger" id="/user/sent/rmvMsg/{{msg._id}}">Delete Message</a></td>
				</tr>
			{{/each}}

		</table>
	</div>
	{{/each}}

</div>