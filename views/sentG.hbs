<div class="container backg" id="navi">
	<h2 id="navh2"> Navigation Bar </h2>
	<ul>
		<li><a class = "link text-secondary" href="/title">Back to home page</a></li>
		<li><a class = "link text-secondary" href="/user"> Back to User's Page </a></li>
		<li><a class = "link text-secondary" href="/user/inbox"> View Inbox </a></li>
	</ul>
</div>

<div class="container backg usr">
	<div style="padding-top:30px" class = "row">
		<div class = "col-8">
			<h2>{{un}}</h2>
		</div>
	</div>

	<div class="row" style="border-top: 2px solid black; padding-top: 2%;">
		<div class="col-12">
			<h2> Messages </h2> <br>
			<a href='/user/sent'><button value="gbSend">Remove Current Grouping</button></a>
			<a href='/user/sent/sortBy/from'><button value="gbSend">Group By Receiver</button></a>
			<a href='/user/sent/sortBy/subj'><button value="gbSubj">Group By Subject</button></a> <br>
		</div>
	</div>
	
	{{#each tbox.items as |group|}}
	<div class = "row" style="padding-top: 2%;">
		<div class="col-12"> <h3> {{group.name}} </h3> </div>
		<table style="overflow-x: auto;" class="col-12">
			<tr>
				<th class="text-info"> Subject </th>
				<th class="text-info"> To </th>
			</tr>

			
			{{#each group.items as |msg i|}}
				<tr id="{{i}}">
					<td> <a href="/user/inbox/viewMsg/{{msg._id}}"> {{msg.subject}}</a> </td>
					<td> {{msg.to}}</a></td>
					<td class="rmv"><a onclick="rmvFunction(this, `{{msg.subject}}`)" class = "link text-danger" id="/user/sent/rmvMsg/{{msg._id}}">Delete Message</a></td>
				</tr>
			{{/each}}

		</table>
	</div>
	{{/each}}

</div>